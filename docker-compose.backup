services:
  php:
    #user: root
    image: php:8.2-fpm
    #build:
      #context: .
      #dockerfile: dockerfile
    volumes:
      - ./var/www/html/app:/var/www/html:z

  nginx:
    #user: root
    image: nginx:latest
    ports:
      - "8080:80"
      - "8443:443"
    volumes:
      - ./nginx.conf:/etc/nginx/nginx.conf:z
      - ./default.conf:/etc/nginx/conf.d/default.conf:z
      - ./var/www/html/app:/var/www/html:z
      - ./ssl:/etc/nginx/ssl:z
      - ./logs/nginx:/var/log/nginx:z
    depends_on:
      - php

